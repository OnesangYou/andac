<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dac.gapp.andac.EyeTestActivity">

        <ImageView
            android:id="@+id/imgview"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

        <Button
            android:id="@+id/btnEyeTestBtn1"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttonstyle"
            android:textColor="@color/colorMain"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/btnEyeTestBtn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgview" />

        <Button
            android:id="@+id/btnEyeTestBtn2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/buttonstyle"
            android:textColor="@color/colorMain"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/btnEyeTestBtn3"
            app:layout_constraintStart_toEndOf="@+id/btnEyeTestBtn1"
            app:layout_constraintTop_toBottomOf="@+id/imgview" />

        <Button
            android:id="@+id/btnEyeTestBtn3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/buttonstyle"
            android:textColor="@color/colorMain"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnEyeTestBtn2"
            app:layout_constraintTop_toBottomOf="@+id/imgview" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:text="힐링 옵터 색맹검사"
            android:textColor="@color/colorMain"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/logo_notext_2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </android.support.constraint.ConstraintLayout>

</layout>