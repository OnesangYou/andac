<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dac.gapp.andac.MyPageActivity"
    tools:ignore="ExtraText">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription,RtlHardcoded"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="마이페이지"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="로그아웃"
            android:textColor="@color/black" />
    </android.support.v7.widget.Toolbar>
    .

    <android.support.constraint.ConstraintLayout
        android:id="@+id/my_info"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/profilepic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="nick name"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/myPageRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            app:layout_constraintTop_toBottomOf="@+id/nameText">

            <RadioButton
                android:id="@+id/accountSettingBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|top"
                android:text="계정설정"
                android:textSize="@dimen/_10sp" />

            <RadioButton
                android:id="@+id/favoritBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|top"
                android:text="즐겨찾기"
                android:textSize="@dimen/_10sp" />

            <RadioButton
                android:id="@+id/myCouponBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|top"
                android:text="내쿠폰함"
                android:textSize="@dimen/_10sp" />

            <RadioButton
                android:id="@+id/paymentHistoryBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|top"
                android:text="결재내역"
                android:textSize="@dimen/_10sp" />

            <RadioButton
                android:id="@+id/myBoardsBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_horizontal|top"
                android:text="내가쓴글"
                android:textSize="@dimen/_10sp" />


        </RadioGroup>

    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:id="@+id/scroll_mypage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_info"
        >

        <LinearLayout
            android:id="@+id/approvalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:padding="10dp"
                android:text="병원 계정 설정"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/profile_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="병원 프로필 수정"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/password_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="비밀번호 변경"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/profilepic_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="병원 상세 페이지 꾸미기"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/eventManageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="이벤트 페이지 관리"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:padding="10dp"
                android:text="설정"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="고객센터 및 문의사항"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="광고 요청 및 1:1 대화 요청"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="이용약관 및 계약사항"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="안닥 계약하기"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="버전 정보"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
