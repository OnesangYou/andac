<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dac.gapp.andac.MyPageActivity"
    tools:ignore="ExtraText">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/back"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="14dp"
            tools:ignore="ContentDescription,RtlHardcoded" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="마이페이지"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="로그아웃"
            android:textColor="@color/black"
            />
    </android.support.v7.widget.Toolbar>.


    <ScrollView
        android:id="@+id/scroll_mypage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHospitalInfo"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/approvalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:padding="10dp"
                android:text="병원 계정 설정"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/profile_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="병원 프로필 수정"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/password_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="비밀번호 변경"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/profilepic_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="병원 상세 페이지 꾸미기"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/eventManageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="이벤트 페이지 관리"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray"
                android:padding="10dp"
                android:text="설정"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="고객센터 및 문의사항"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="광고 요청 및 1:1 대화 요청"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="이용약관 및 계약사항"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="안닥 계약하기"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/non"
                android:text="버전 정보"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/waitApprovalView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/waitApproval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_mypage" />

    <include
        android:id="@+id/layoutHospitalInfo"
        layout="@layout/row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</android.support.constraint.ConstraintLayout>
