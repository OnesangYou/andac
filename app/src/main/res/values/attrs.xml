<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RangeSeekBar">
        <attr name="max" format="float"/>
        <attr name="min" format="float"/>
        <attr name="reserve" format="float"/>
        <attr name="cells" format="integer"/>
        <attr name="lineColorSelected" format="color"/>
        <attr name="lineColorEdge" format="color"/>
        <attr name="seekBarResId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ChatMessageView">
        <attr name="cmv_showArrow" format="boolean" />
        <attr name="cmv_arrowPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>

        <attr name="cmv_arrowGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="cmv_backgroundColor" format="color" />
        <attr name="cmv_backgroundColorPressed" format="color" />
        <attr name="cmv_cornerRadius" format="dimension" />
        <attr name="cmv_contentPadding" format="dimension" />
        <attr name="cmv_arrowMargin" format="dimension" />

    </declare-styleable>

    <attr name="cbd_calendar_row" format="integer"/>

    <declare-styleable name="CalendarDateView">
        <attr name="cbd_calendar_row"/>
    </declare-styleable>

    <declare-styleable name="DualButton">
        <attr name="textFirst" format="reference|string"/>
        <attr name="backgroundColorFirst" format="reference|color" />
        <attr name="backgroundResFirst" format="reference" />
        <attr name="textSizeFirst" format = "dimension" />
        <attr name="textColorFirst" format="reference|color" />
        <attr name="fontStyleFirst" format="integer"/>
        <attr name="gravityFirst" format="integer" />
        <attr name="drawableRightFirst" format="reference" />
        <attr name="drawableStartFirst" format="reference" />
        <attr name="drawableLeftFirst" format="reference" />
        <attr name="drawableEndFirst" format="reference" />
        <attr name="drawableTopFirst" format="reference" />
        <attr name="drawableBottomFirst" format="reference" />
        <attr name="drawablePaddingFirst" format = "dimension" />
        <attr name="textSecond" format="reference|string"/>
        <attr name="backgroundColorSecond" format="reference|color" />
        <attr name="backgroundResSecond" format="reference" />
        <attr name="textSizeSecond" format = "dimension" />
        <attr name="textColorSecond" format="reference|color" />
        <attr name="fontStyleSecond" format="integer"/>
        <attr name="gravitySecond" format="integer" />
        <attr name="drawableRightSecond" format="reference" />
        <attr name="drawableStartSecond" format="reference" />
        <attr name="drawableLeftSecond" format="reference" />
        <attr name="drawableEndSecond" format="reference" />
        <attr name="drawableTopSecond" format="reference" />
        <attr name="drawableBottomSecond" format="reference" />
        <attr name="drawablePaddingSecond" format = "dimension" />
        <attr name="clickableSecond" format="boolean"/>
        <attr name="duration" format="integer"/>
        <attr name="dualDirection" format="enum">
            <enum name="touchPoint" value="0"/>
            <enum name="rtl" value="1"/>
            <enum name="ltr" value="2"/>
        </attr>
        <attr name="dualType" format="enum">
            <enum name="reveal" value="0"/>
        </attr>
    </declare-styleable>

</resources>
