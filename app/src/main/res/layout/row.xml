<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:algolia="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgview_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_accessibility_black_18dp" />

        <TextView
            android:id="@+id/txtview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            algolia:attribute='@{"name"}'
            algolia:highlighted='@{true}'
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail" />

        <TextView
            android:id="@+id/txtview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            algolia:attribute='@{"address1"}'
            algolia:highlighted='@{true}'
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

        <TextView
            android:id="@+id/txtview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            algolia:attribute='@{"phone"}'
            algolia:highlighted='@{true}'
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_address" />

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_description">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_eyesick_off" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_eyesick_off" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_eyesick_off" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_eyesick_off" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_eyesick_off" />

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/heart_fill"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/layout_tags"/>
    </android.support.constraint.ConstraintLayout>
</layout>