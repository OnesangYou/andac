<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:algolia="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgview_thumbnail"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/splash" />

        <TextView
            android:id="@+id/txtview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            algolia:attribute='@{"name"}'
            algolia:highlighted='@{true}'
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/txtview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            algolia:attribute='@{"address1"}'
            algolia:highlighted='@{true}'
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_title"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/txtview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="description"
            android:textSize="15sp"
            algolia:attribute='@{"phone"}'
            algolia:highlighted='@{true}'
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_address"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgview_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/txtview_description">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_lasic_off" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_oldeye_off" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_insertlense_off" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_whiteeye_off" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_eyesick_off" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/heart_fill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="count"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    </android.support.constraint.ConstraintLayout>
</layout>